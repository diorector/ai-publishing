  "korean_rules": {
    "spacing": {
      "description": "한글 띄어쓰기 규칙 (2021 한글 맞춤법 기준)",
      "rules": [
        {
          "id": "spacing_001",
          "name": "한글-한글 띄어쓰기",
          "pattern": "한글과 한글 사이는 띄어쓰기",
          "example": "한국어 띄어쓰기는 중요합니다",
          "enabled": true
        },
        {
          "id": "spacing_002",
          "name": "한글-숫자 띄어쓰기",
          "pattern": "한글과 숫자 사이 띄어쓰기",
          "example": "2025년 11월 18일",
          "enabled": true
        },
        {
          "id": "spacing_003",
          "name": "한글-영어 띄어쓰기",
          "pattern": "한글과 영어 사이 띄어쓰기",
          "example": "Python 프로그래밍",
          "enabled": true
        },
        {
          "id": "spacing_004",
          "name": "조사와 띄어쓰기",
          "pattern": "조사는 붙여 씀 (은, 는, 을, 를 등)",
          "example": "나는 학생입니다",
          "enabled": true
        }
      ]
    },
    "spelling": {
      "description": "한글 맞춤법 규칙",
      "common_errors": [
        {
          "id": "spelling_001",
          "wrong": "안되다",
          "correct": "안 되다",
          "reason": "부사와 동사 분리",
          "enabled": true
        },
        {
          "id": "spelling_002",
          "wrong": "되어지다",
          "correct": "되다",
          "reason": "중복 제거",
          "enabled": true
        },
        {
          "id": "spelling_003",
          "wrong": "보내다",
          "correct": "보내다",
          "reason": "표준 맞춤법",
          "enabled": true
        },
        {
          "id": "spelling_004",
          "wrong": "갈 길이 멀다",
          "correct": "갈 길이 멀다",
          "reason": "조사 올바른 사용",
          "enabled": true
        }
      ]
    },
    "particles": {
      "description": "조사 사용 규칙",
      "rules": [
        {
          "id": "particle_001",
          "particle": "은/는",
          "rule": "주어 표시",
          "example": "나는 학생입니다 / 고양이는 동물입니다",
          "enabled": true
        },
        {
          "id": "particle_002",
          "particle": "을/를",
          "rule": "목적어 표시",
          "example": "나는 밥을 먹습니다",
          "enabled": true
        }
      ]
    }
  },
  "foreign_language_rules": {
    "english": {
      "description": "영어 표기법 규칙",
      "rules": [
        {
          "id": "english_001",
          "name": "기업명 일관성",
          "rule": "같은 기업명은 동일하게 표기",
          "examples": [
            {
              "correct": "Google",
              "incorrect": ["구글", "google"]
            },
            {
              "correct": "Apple",
              "incorrect": ["애플", "apple"]
            }
          ],
          "enabled": true
        },
        {
          "id": "english_002",
          "name": "기술용어 일관성",
          "rule": "같은 기술용어는 동일하게 표기",
          "examples": [
            {
              "correct": "Machine Learning",
              "incorrect": ["머신 러닝", "machine learning", "기계학습"]
            }
          ],
          "enabled": true
        },
        {
          "id": "english_003",
          "name": "첫글자 대문자",
          "rule": "고유명사는 첫글자 대문자",
          "example": "Python",
          "enabled": true
        }
      ]
    }
  },
  "number_and_unit_rules": {
    "numbers": {
      "description": "숫자 표기 규칙",
      "rules": [
        {
          "id": "number_001",
          "name": "아라비아 숫자 기본",
          "rule": "일반적으로 아라비아 숫자 사용",
          "example": "2025년, 18일",
          "enabled": true
        },
        {
          "id": "number_002",
          "name": "한글 숫자 사용 제한",
          "rule": "특정한 경우에만 사용",
          "example": "일, 이, 삼 (보수적인 표기)",
          "enabled": true
        },
        {
          "id": "number_003",
          "name": "서수 표기",
          "rule": "제1장, 제2절 형식",
          "example": "제1장: 소개",
          "enabled": true
        }
      ]
    },
    "units": {
      "description": "단위 표기 규칙",
      "rules": [
        {
          "id": "unit_001",
          "name": "국제 단위",
          "rule": "m, kg, s 등 국제 단위 사용",
          "example": "100 kg, 5 m",
          "enabled": true
        },
        {
          "id": "unit_002",
          "name": "퍼센트 표기",
          "rule": "% 기호 사용, 숫자와 띄어쓰기",
          "example": "30 %",
          "enabled": true
        },
        {
          "id": "unit_003",
          "name": "화폐 단위",
          "rule": "원, 달러 등 명확한 표기",
          "example": "100,000원 또는 1,000달러",
          "enabled": true
        }
      ]
    }
  },
